@model Project3.Shared.Models.ViewModels.RestaurantViewModel

<div class="card restaurant-card h-100 shadow-sm" data-restaurant-id="@Model.RestaurantID">
    <div class="position-relative">
        @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
        {
            <img src="@Model.ProfilePhoto" class="card-img-top" alt="@Model.Name" style="height: 160px; object-fit: cover;">
        }
        else
        {
            <img src="/images/restaurant-placeholder.png" class="card-img-top" alt="@Model.Name" style="height: 160px; object-fit: cover;">
        }
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate">@Model.Name</h5>
        <p class="card-text mb-1">
            <small class="text-muted">@Model.Cuisine</small>
        </p>
        <p class="card-text mb-1">
            <small class="text-muted">@Model.City, @Model.State</small>
        </p>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="@(i <= Model.AverageRating ? "bi bi-star-fill" : "bi bi-star")"></i>
                    }
                </div>
                <small class="text-muted">@Model.ReviewCount review@(Model.ReviewCount != 1 ? "s" : "")</small>
            </div>
            <div>
                <span class="text-success fw-bold">
                    @(new string('$', Model.AveragePriceLevel > 0 ? Model.AveragePriceLevel : 1))
                </span>
            </div>
        </div>
        <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@Model.RestaurantID" class="btn btn-sm btn-outline-primary mt-auto">View Details</a>
    </div>
</div> 