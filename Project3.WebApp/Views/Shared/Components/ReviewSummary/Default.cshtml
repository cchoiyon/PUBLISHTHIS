@model List<Project3.Shared.Models.ViewModels.ReviewViewModel>

<div class="review-summary card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">
            <i class="bi bi-star-fill text-warning me-2"></i>
            Review Summary
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 text-nowrap" style="width: 120px;">Overall Rating:</span>
                        <div class="progress flex-grow-1" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                 style="width: @(ViewBag.AvgOverallRating * 20)%;" 
                                 aria-valuenow="@ViewBag.AvgOverallRating" aria-valuemin="0" aria-valuemax="5">
                            </div>
                        </div>
                        <span class="ms-2 fw-bold">@Math.Round(ViewBag.AvgOverallRating, 1)</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 text-nowrap" style="width: 120px;">Food Quality:</span>
                        <div class="progress flex-grow-1" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: @(ViewBag.AvgFoodRating * 20)%;" 
                                 aria-valuenow="@ViewBag.AvgFoodRating" aria-valuemin="0" aria-valuemax="5">
                            </div>
                        </div>
                        <span class="ms-2">@Math.Round(ViewBag.AvgFoodRating, 1)</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 text-nowrap" style="width: 120px;">Service:</span>
                        <div class="progress flex-grow-1" style="height: 8px;">
                            <div class="progress-bar bg-info" role="progressbar" 
                                 style="width: @(ViewBag.AvgServiceRating * 20)%;" 
                                 aria-valuenow="@ViewBag.AvgServiceRating" aria-valuemin="0" aria-valuemax="5">
                            </div>
                        </div>
                        <span class="ms-2">@Math.Round(ViewBag.AvgServiceRating, 1)</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 text-nowrap" style="width: 120px;">Atmosphere:</span>
                        <div class="progress flex-grow-1" style="height: 8px;">
                            <div class="progress-bar bg-primary" role="progressbar" 
                                 style="width: @(ViewBag.AvgAtmosphereRating * 20)%;" 
                                 aria-valuenow="@ViewBag.AvgAtmosphereRating" aria-valuemin="0" aria-valuemax="5">
                            </div>
                        </div>
                        <span class="ms-2">@Math.Round(ViewBag.AvgAtmosphereRating, 1)</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 text-nowrap" style="width: 120px;">Price Value:</span>
                        <div class="progress flex-grow-1" style="height: 8px;">
                            <div class="progress-bar bg-danger" role="progressbar" 
                                 style="width: @(ViewBag.AvgPriceRating * 20)%;" 
                                 aria-valuenow="@ViewBag.AvgPriceRating" aria-valuemin="0" aria-valuemax="5">
                            </div>
                        </div>
                        <span class="ms-2">@Math.Round(ViewBag.AvgPriceRating, 1)</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="me-2 text-nowrap" style="width: 120px;">Total Reviews:</span>
                        <span class="badge bg-secondary">@Model.Count</span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                No reviews available yet. Be the first to review!
            </div>
        }
    </div>
</div> 